<body class="content">
<h1>Books</h1>

<%= @book.each do |book| %>

  <p>タイトル</p>
  <span><%= book.title %></span>
  
<% end %>
  
  <h1 class=headline>New Book</h1>

  <%= form_with model: @books do |f| %>
    <div class="title">
      <h4 >Title</h4>
        <%= f.text_field :title %>  
    </div>
  
    <div class="body">
      <h4>Body</h4>
        <%= f.text_area :body %>  
    </div>
  
	  <p class="submit">
	    <%= f.submit 'Create Book' %>
	  </p>
  <% end %>
</body>
