<div class="edit_body">
  <h1 class="headline">Editing Book</h1>
  
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  
    <% if @book.errors.any? %>
  		<div class="errors_count">
  			<h2 class="errors_count_ms"><%= @book.errors.count %> <span class="count_content">errors prohibited this book from being saved:</span></h2>
  			<ul class="errors_list">
  				<% @book.errors.full_messages.each do |message| %>
  					<li><%= message %></li>
  				<% end %>
  			</ul>
  		</div>	
  		
  		<div class="field_errors">
      	<h4 class="field_errors_content">Title</h4>
        <div class="field_errors_content"><%= f.text_field :title %></div>  
    	</div>
  
    	<div class="field_errors">
      	<h4 class="field_errors_content">Body</h4>
        <div class="field_errors_content"><%= f.text_area :body %></div>  
    	</div>
    	
    	<div class="submit">
        <%= f.submit 'Update Book' %>
	    </div>
	    
	    <p class="button"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>  
    	
   	<% else %>
    	<div class="field">
      	<h4 >Title</h4>
        <%= f.text_field :title %>  
    	</div>
  
    	<div class="field">
     	 <h4>Body</h4>
       	<%= f.text_area :body %>  
    	</div>
  
      <div class="submit">
        <%= f.submit 'Update Book' %>
	    </div>
	    
	     <p class="button"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>  
  	<% end %>
  	
  <% end %>
</div>




