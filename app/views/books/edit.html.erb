<div class="edit_body">
  <h1 class="headline">Editing Book</h1>
  
  <%= form_with model: @book do |f| %>
    <div class="field">
      <h4>Title</h4>  
      <%= f.text_field :title %>  
    </div>
    
    <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
        
    <div class="submit">
      <%= f.submit 'Update Book' %>
    </div>

  <% end %>
  
  <p class="main"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>  

</div>

